<!-- app/views/reviews/_form.html.erb -->

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rating (from 1 to 5)" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
