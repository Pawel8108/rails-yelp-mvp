<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= restaurant.name %></h5>
    <p class="card-text">
      <strong>Address:</strong>
      <%= restaurant.address %>
    </p>

    <p class="card-text">
      <strong>Phone:</strong>
      <%= restaurant.phone_number %>
    </p>

    <p class="card-text">
      <strong>Category:</strong>
      <%= restaurant.category %>
    </p>

    <%= link_to "View Details", restaurant_path(restaurant), class: "btn btn-primary" %>
  </div>
</div>
